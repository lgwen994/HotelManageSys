@model HotelManageSys.Models.Room

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Room</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RoomId" />
            <div class="form-group">
                <label asp-for="RoomNumber" class="control-label"></label>
                <input asp-for="RoomNumber" class="form-control" />
                <span asp-validation-for="RoomNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoomStatusId" class="control-label"></label>
                <select asp-for="RoomStatusId" class="form-control" asp-items="ViewBag.RoomStatusId"></select>
                <span asp-validation-for="RoomStatusId" class="text-danger"></span>
            </div>

                <div id ="RoomTypeDiv" class="form-group">
                    <label asp-for="RoomTypeId" class="control-label"></label>
                    <select asp-for="RoomTypeId" class="form-control" asp-items="ViewBag.RoomTypeId"></select>
                    <span asp-validation-for="RoomTypeId" class="text-danger"></span>
                </div>


            <div id="IsBookedDiv" class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsBooked" /> @Html.DisplayNameFor(model => model.IsBooked)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script>
    $(document).ready(function () {
        $("#RoomTypeDiv").hide();
         $("#IsBookedDiv").hide();
    });
</script>